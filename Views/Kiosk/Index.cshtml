@model IEnumerable<KioskManagementWebApp.Models.Kiosk>
@{
    int vacantCount = 0; // Số Kiosk còn trống
    int rentedCount = 0; // Số Kiosk đã cho thuê
    int totalCount = 0;  // Tổng số Kiosk

    foreach (var k in Model)
    {
        totalCount++;
        if (k.IsRented == false)
            vacantCount++;
        else
            rentedCount++;
    }
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Kiosk</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #2c3e50;
            padding-top: 20px;
            color: white;
        }

            .sidebar .nav-link {
                color: white;
                padding: 10px 20px;
            }

                .sidebar .nav-link.active {
                    background-color: #34495e;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .card-kiosk {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            margin: 10px;
            text-align: center;
            background-color: #ecf0f1;
        }

            .card-kiosk.rented {
                background-color: #d4edda; /* Màu xanh lá nhạt */
            }

        .btn-custom {
            margin: 5px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center">QUẢN LÝ KIOSK</h4>
        <hr>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" href="#">Trang chủ</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Kiosk</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Tài liệu học tập</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Đóng học phí</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Hóa đơn</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Thống kê</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="content">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>CANTEEN</h3>
            <div>
                <select class="form-select me-2" style="width: auto; display: inline-block;">
                    <option>Trạng thái Kiosk</option>
                    <option>Chưa cho thuê</option>
                    <option>Đã cho thuê</option>
                </select>
                <select class="form-select me-2" style="width: auto; display: inline-block;">
                    <option>Trạng thái</option>
                </select>
                <input type="text" class="form-control me-2" placeholder="Kiosk" style="width: auto; display: inline-block;">
                <button class="btn btn-primary">Tìm kiếm</button>
            </div>
        </div>
        <p>Còn trống @vacantCount | Đã cho thuê @rentedCount</p>

        <h4>Còn trống @vacantCount | Đã cho thuê @rentedCount | Chưa thu phí 0</h4>
        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-success me-2">Thêm Kiosk trống</button>
            <button class="btn btn-primary me-2">Sửa thông tin Kiosk</button>
            <button class="btn btn-danger">Xóa Kiosk</button>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card-kiosk @(item.IsRented ? "rented" : "")">
                        <h5>@item.Location - @item.Name</h5>
                        @if (item.IsRented == true)
                        {
                            <p>@(item.RenterName ?? "Chưa có người thuê")</p>
                        }
                        else
                        {
                            <p>Chưa có người thuê</p>
                        }
                        <p>@item.RentalFee.ToString("N0") VNĐ</p>
                        <button class="btn btn-success btn-custom">Trả</button>
                        <button class="btn btn-secondary btn-custom">Xem</button>
                        <button class="btn btn-primary btn-custom">Sửa</button>
                        <button class="btn btn-danger btn-custom">Xóa</button>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <button class="btn btn-success">SIMPLE HOUSE</button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>