@model KioskManagementWebApp.Models.Kiosk
<h2>Thêm Kiosk</h2>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsRented"></label>
        <input asp-for="IsRented" type="checkbox" />
    </div>
    <div class="form-group">
        <label asp-for="RenterName"></label>
        <input asp-for="RenterName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RentalFee"></label>
        <input asp-for="RentalFee" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>