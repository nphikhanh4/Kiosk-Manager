<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Dịch Vụ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Kiosk.css" asp-append-version="true" />
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center">Quản lý dịch vụ</h4>
        <hr>
        <ul class="nav flex-column" id="sidebarTabs" role="tablist">
            @{
                var role = ViewData["Role"] as string;
                if (!string.IsNullOrEmpty(role))
                {
                    if (role == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Kiosk" && ViewContext.RouteData.Values["action"].ToString() == "Index") ? "active" : "")"
                               id="kiosk-tab" href="/Kiosk/Index" role="tab">
                                <i class="fas fa-store"></i> Kiosk
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Document" && ViewContext.RouteData.Values["action"].ToString() == "Index") ? "active" : "")"
                               id="document-tab" href="/Document/Index" role="tab">
                                <i class="fas fa-book"></i> Tài liệu học tập
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Document" && ViewContext.RouteData.Values["action"].ToString() == "ManageDocuments") ? "active" : "")"
                               id="manage-documents-tab" href="/Document/ManageDocuments" role="tab">
                                <i class="fas fa-cogs"></i> Quản lý Tài liệu
                            </a>
                        </li>
                    }
                }
            }

            <li class="nav-item">
                <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Tuition" && ViewContext.RouteData.Values["action"].ToString() == "Index") ? "active" : "")"
                   id="tuition-tab" href="/Tuition/Index" role="tab">
                    <i class="fas fa-money-check-alt"></i> Đóng học phí
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Tuition" && ViewContext.RouteData.Values["action"].ToString() == "OverdueTuition") ? "active" : "")"
                   id="overdue-tuition-tab" href="/Tuition/OverdueTuition" role="tab">
                    <i class="fas fa-exclamation-triangle"></i> Quá hạn học phí
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Logout", "Account")" class="btn btn-danger w-100 mb-3">Đăng xuất</a>
            </li>
        </ul>
    </div>

    <div class="content">
        <div class="tab-content" id="sidebarTabContent">
            @RenderBody()
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>