@model IEnumerable<KioskManagementWebApp.Models.Document>
<h2>Quản lý Tài liệu</h2>
<a asp-action="Create" class="btn btn-primary">Thêm Tài liệu</a>
<table class="table">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Loại</th>
            <th>Giá</th>
            <th>Số lượng tồn</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var document in Model)
        {
            <tr>
                <td>@document.Title</td>
                <td>@document.Type</td>
                <td>@document.Price</td>
                <td>@document.Stock</td>
            </tr>
        }
    </tbody>
</table>